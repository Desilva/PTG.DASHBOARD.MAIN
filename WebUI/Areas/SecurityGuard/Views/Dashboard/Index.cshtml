    @model SecurityGuard.ViewModels.DashboardViewModel
    @{
        ViewBag.Title = "User Management";
        //Layout = "~/Areas/SecurityGuard/Views/Shared/_SecurityGuardLayoutPage.cshtml";
    }

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>       
    </div>
</div>
  
<div class="wrapper wrapper-content">
    <div class="ibox">
        <div class="ibox-content">
            <h4>Manage Users, Roles, Modules and Actions</h4>
            <hr />
            <div class="row">
                <!-- Manage Roles -->
                <div class="col-xs-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Manage Roles</h3>
                        </div>
                        <div class="panel-body">
                            <p>@Html.ActionLink("Manage Roles", "Index", "Role", new { area = "SecurityGuard" }, null)</p>
                            <table>
                                <tbody>
                                    <tr>
                                        <td>
                                            Total Roles:
                                        </td>
                                        <td>
                                            &nbsp;
                                        </td>
                                        <td>
                                        <td>
                                            @Model.TotalRolesCount
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Manage Actions -->
               
                <!-- Manage Users -->
                <div class="col-xs-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Manage Users</h3>
                        </div>
                        <div class="panel-body">
                            <p>
                                @Html.ActionLink("Manage Users", "Index", "Membership", new { area = "SecurityGuard" }, null)
                                | @Html.ActionLink("Create User", "CreateUser", "Membership", new { area = "SecurityGuard" }, null)
                            </p>                          
                        </div>
                    </div>
                </div>                         
            </div>
        </div>
    </div>
</div>
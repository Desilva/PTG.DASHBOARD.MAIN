@model SecurityGuard.ViewModels.LogOnViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>PTG.DASHBOARD | Login</title>

    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/" rel="stylesheet">

    @Styles.Render("~/Content/kendo/css")
    @Styles.Render("~/Content/sweetalert")
    @Styles.Render("~/font-awesome/css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquerymigrate")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")

    <script>

        $(function () {
            $('.forgot-pass').click(function (event) {
                $(".pr-wrap").toggleClass("show-pass-reset");
            });

            $('.pass-reset-submit').click(function (event) {
                $(".pr-wrap").removeClass("show-pass-reset");
            });
        });

    </script>
</head>

<body class="login-bg">
    <div class="background-rounded">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <p class="welcome logo-header">
                        <img src="~/Content/img/logo.svg" />
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="welcome">
                        WELCOME BACK !
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="panel panel-default custom-panel">
                    <div class="panel-body">
                        <p class="form-title">
                            Sign In To Your Account
                        </p>
                        @using (Html.BeginForm((string)ViewBag.FormAction, "SGAccount", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @class = "form-horizontal login" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.DeviceId)
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="inner-addon left-addon">
                                        <i class="glyphicon glyphicon-envelope"></i>
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "email@pertamina.com" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <div class="inner-addon left-addon">
                                        <i class="glyphicon glyphicon-lock"></i>
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "password" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <button type="submit" class="btn btn-primary btn-masuk">Masuk</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        servicedesk.pertagas@pertamina.com
        <p>ext 6666</p>
    </div>
</body>

</html>



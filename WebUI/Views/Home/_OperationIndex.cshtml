@model WebUI.Models.HomeOperationModel
@using WebUI.Models

@if (Model.OperationItems.Count() > 0)
{
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <span class="label label-@((Model.LastUpdateDate.AddMonths(1) >= DateTime.Now)?"success":"warning") pull-right">
                @Model.LastUpdateDate.ToString("MMM \\'yy")
            </span>
            <h5>Operasi</h5>
        </div>
        <div class="ibox-content">
            <table class="operation table-bordered table-responsive">
                <thead>
                    <tr>
                        <th>Jenis Usaha</th>
                        <th>Volume</th>
                        <th>% Real</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                    foreach (HomeOperationItemModel homeOperationItemModel in Model.OperationItems.Values)
                    {
                    <tr>
                        <td>@homeOperationItemModel.Account</td>
                        <td class="text-right">@homeOperationItemModel.Value</td>
                        <td class="text-right">@homeOperationItemModel.Persen</td>
                    </tr>
                    }
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Operasi</h5>
        </div>
        <div class="ibox-content">
            <div id="grid-nkk" data-role="grid" class="label label-danger" style="">Gagal mengambil data</div>
        </div>
    </div>
}
